{
  "name": "secure-codee",
  "publisher": "AhmedSlem",
  "displayName": "SecureCodee",
  "description": "Secure your code with Rule based scanning",
  "icon": "resources/mainIcon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AhmedSleem06/SecureCode-Extension"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "security",
    "scanner",
    "vulnerability",
    "code analysis",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "secure-code-sidebar",
          "title": "SecureCode",
          "icon": "./resources/cleanIcon.svg"
        }
      ]
    },
    "views": {
      "secure-code-sidebar": [
        {
          "id": "secure-code.scanResultsWebview",
          "name": "Scan Results",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "secure-code.scan",
          "when": "view == secure-code.scanResultsWebview",
          "group": "navigation"
        },
        {
          "command": "secure-code.clearResults",
          "when": "view == secure-code.scanResultsWebview",
          "group": "navigation"
        },
        {
          "command": "secure-code.login",
          "when": "view == secure-code.scanResultsWebview",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "secure-code.login",
        "title": "Login / Activate",
        "icon": "$(account)"
      },
      {
        "command": "secure-code.scan",
        "title": "Scan Current File",
        "icon": "$(play)"
      },
      {
        "command": "secure-code.clearResults",
        "title": "Clear Results",
        "icon": "$(clear-all)"
      },
      {
        "command": "secure-code.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}